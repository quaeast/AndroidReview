<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/third_pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/bjfu" />

        <TextView
            android:id="@+id/third_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/third_course_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/is_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onIsFavoriteOnChecked"
            android:text="CheckBox" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>